<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scorpion.unithalluwa">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/unithalluwalogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/unithalluwalogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main.ManageNotices"></activity>
        <activity android:name=".About.Info" />
        <activity android:name=".About.rules" />
        <activity android:name=".About.gpa" />
        <activity android:name=".User_UI.ChangePassword" />
        <activity android:name=".Mark.ManageMarks" />
        <activity
            android:name=".User_UI.UserLogin"
            android:screenOrientation="portrait" />
        <activity android:name=".PastPapers_UI.editPastPapers" />
        <activity android:name=".PastPapers_UI.download_papersAndAnswers" />
        <activity android:name=".PastPapers_UI.selectPastPapers" />
        <activity android:name=".PastPapers_UI.viewPastPapers" />
        <activity android:name=".Main.loading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Assingment.RetriveAssignment" />
        <activity android:name=".Assingment.EditAssignment" />
        <activity android:name=".Assingment.AddAssignment" />
        <activity
            android:name=".Main.MainUI"
            android:label="@string/title_activity_main_ui"
            android:parentActivityName=".User_UI.profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scorpion.unithalluwa.User_UI.profile" />
        </activity>
        <activity android:name=".User_UI.profile" />
        <activity android:name=".User_UI.Register" />
        <activity android:name=".User_UI.Main" />
        <activity android:name=".Mark.AddResultActivity" />
        <activity android:name=".Mark.ReportActivity" />
        <activity android:name=".Mark.AddCAMarks" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>